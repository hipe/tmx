#!/usr/bin/env ruby -w

require 'skylab/test_support'

_cli = Skylab::TestSupport::CLI.new $stdin, $stdout, $stderr, [ $PROGRAM_NAME ] do |o|

  o.filesystem_by do
    Skylab::TestSupport.lib_.system.filesystem
  end
end

d = _cli.invoke ARGV

if d.nonzero?
  $stderr.puts "(exitstatus: #{ d })"
end

exit d
