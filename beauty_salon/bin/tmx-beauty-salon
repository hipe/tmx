#!/usr/bin/env ruby -w

require 'skylab/beauty_salon'

# (below while #open [#023])
x = Skylab::BeautySalon::CLI2.new(
  ARGV, $stdin, $stdout, $stderr, [ $PROGRAM_NAME ]
).execute

if x.respond_to? :id2name
  $stderr.puts "(result: #{ x })"
elsif x.nonzero?
  $stderr.puts "(exitstatus: #{ x })"
end
