module Skylab
  module TanMan
    grammar Statement
      rule dependency_statement
        agent:cluster sep 'depends on' sep target:cluster
        { def tree ; TanMan::Sexp::Auto::Recursive[ self ] end }
      end
      rule cluster
        head:word tail:(sep content:word)*
      end
      rule word
        (
          !'depends on'
          [^,;\t\n\r ]
        )+
        { def tree ; text_value end }
      end
      rule sep
        [ \t\n\r]+
      end
    end
  end
end
